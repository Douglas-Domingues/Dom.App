@page "/signup"
@layout HeadlessLayout
@inherits SignUpPage

<PageTitle>DomApp - Cadastro</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="4" xxl="3">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img
                    src="img/DomApp.png"
                    alt="DomApp - Controle Financeiro"
                    width="250" />
            </div>

            <EditForm Model="InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator/> <!-- Pode-se usar o <ValidationSummary> para apresentar todos os campos inválidos na validação-->
                
                <MudTextField
                    T="string"
                    Label="E-mail"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Email"
                    @bind-Value="InputModel.Email"
                    For="@(() => InputModel.Email)" />
                <MudTextField
                    T="string"
                    Label="Senha"
                    HelperText="Campo obrigatório"
                    InputType="InputType.Password"
                    @bind-Value="InputModel.Password"
                    For="@(() => InputModel.Password)" />

                <div class="d-flex mt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true" />
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Criar Conta</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login">Já tenho uma conta</MudButton>
                    }
                </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;
}