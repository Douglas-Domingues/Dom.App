@page "/signup"
@layout HeadlessLayout

<PageTitle>DomApp - Cadastro</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="4" xxl="3">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img
                    src="img/DomApp.png"
                    alt="DomApp - Controle Financeiro"
                    width="250" />
            </div>

            <MudForm @ref="_mudForm">
                <MudTextField T="string" Label="E-mail" Required="true" RequiredError="E-mail inválido" Validation="@(new EmailAddressAttribute{ ErrorMessage = "E-mail inválido"})" />
                <MudTextField T="string" Label="Senha" InputType="InputType.Password" Required="true" RequiredError="Senha inválida" Validation="@(new EmailAddressAttribute{ ErrorMessage = "Senha inválida"})" />
            </MudForm>

            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">Criar Conta</MudButton>
                <MudSpacer />
                <MudButton Href="/login">Já tenho uma conta</MudButton>
            </div>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;
}